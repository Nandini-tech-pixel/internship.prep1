import numpy as np
arr = np.array([1, 2, 3])
print(arr + 10)

#ANS1
arr = [1, 2, 3, 4, 5]
doubled = [x * 2 for x in arr]
print(doubled)

arr = np.array([[1,2,3], [4,5,6]])
print(arr.shape)
print(arr[0,1])

