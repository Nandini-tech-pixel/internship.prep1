a * b

#ANS4
import random
matrix = [[random.randint(1, 10) for _ in range(3)] for _ in range(3)]
for row in matrix:
    print(row)

#MINI PROJECT
import numpy as np
matrix = np.random.randint(1, 101, size=(5, 4))
print("Matrix:\n", matrix)
row_mean = np.mean(matrix, axis=1)
row_std = np.std(matrix, axis=1)
row_min = np.min(matrix, axis=1)

print("\nRow-wise Mean:", row_mean)
print("Row-wise Std Dev:", row_std)
print("Row-wise Min:", row_min)


